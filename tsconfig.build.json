{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": [
    "components/**/*",
    "icons/**/*",
    "utils/**/*",
    "config/**/*",
    "hooks/**/*",
    "types/**/*"
  ],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "node_modules",
    "dist",
    "storybook-static"
  ]
}
